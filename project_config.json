  "confidence_thresholds": {
    "auto_move": 0.85,
    "review_queue_min": 0.60,
    "review_queue_max": 0.84,
    "quarantine_max": 0.59
  },
  "naming_format": {
    "pattern": "name_MM-DD-YYYY",
    "run_folder_pattern": "run_MM-DD-YYYY_HHMMSS",
    "date_separator": "-",
    "enforce": true
  },
  "collision_policy": {
    "strategy": "suffix",
    "suffix_pattern": "_{:02d}",
    "suffix_start": 1,
    "max_attempts": 99,
    "allow_overwrite": false
  },
  "rollback_policy": {
    "required_for_phases": [6, 7],
    "backup_before_move": true,
    "log_all_actions": true
  },
  "audit_spine_required": [
    "plan.csv",
    "runlog.txt",
    "summary_MM-DD-YYYY.md",
    "metrics.json",
    "rollback.ps1",
    "evidence"
  ],
  "execution_gates": {
    "require_dryrun_first": true,
    "check_duplicate_scripts": true,
    "validate_config_on_start": true,
    "verify_allowlist": true,
    "block_if_outside_project_root": true
  },
  "logging": {
    "log_level": "info",
    "log_to_file": true,
    "log_to_console": true,
    "timestamp_format": "yyyy-MM-dd HH:mm:ss",
    "max_log_size_mb": 100
